.content
  = form_for(@table) do |f|
    - if @reservation.errors.any?
      #error_explanation
        %h2
          = pluralize(@table.errors.count, "error")
          prohibited this order from being saved:
        %ul
          - @table.errors.full_messages.each do |message|
            %li= message
    .form-horizontal
      .form-group
        = f.label :nr, "Numer" :class => 'col-md-3 control-label'
        .col-md-5
          = f.input :nr, :class => 'form-control'
      .form-group
        .col-md-offset-3.col-md-4
          =f.button "Submit", :class=>"btn btn-primary", :type=>'submit'
