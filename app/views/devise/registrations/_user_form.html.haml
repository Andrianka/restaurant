.form-body
  .form-group.row
    .control-label.col-md-offset-2.col-md-1= f.label :email
    .col-md-5
      = f.email_field :email, autofocus: true, :class => 'form-control'
  .form-group.row
    .control-label.col-md-offset-2.col-md-1= f.label :password
    .col-md-5
      = f.password_field :password, autocomplete: "off", :class => 'form-control'
  .form-group.row
    .control-label.col-md-offset-2.col-md-1= f.label :password_confirmation
    .col-md-5
      = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'
