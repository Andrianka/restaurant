%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  %fieldset
    .form-body
      .form-group.row
        .control-label.col-md-3= f.label :email
        .col-md-9
          = f.email_field :email, autofocus: true, :class => 'form-control'
      .form-group.row
        .control-label.col-md-3= f.label :password
        .col-md-9
          = f.password_field :password, autocomplete: "off", :class => 'form-control'
      .form-group.row
        .control-label.col-md-3= f.label :password_confirmation
        .col-md-9
          = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'
  %fieldset
    =f.fields_for :person do |ff|
      .form-body
        .form-group.row
          %label.control-label.col-md-3 First Name
          .col-md-9
            = ff.text_field :first_name, :class => 'form-control'
      .form-body
        .form-group.row
          %label.control-label.col-md-3 Last Name
          .col-md-9
            = ff.text_field :last_name, :class => 'form-control'
      .form-body
        .form-group.row
          %label.control-label.col-md-3 Telephone
          .col-md-9
            = ff.text_field :tel, :class => 'form-control'

  .actions
    = f.submit "Sign up", class: "btn btn-info"
= render "devise/shared/links"
