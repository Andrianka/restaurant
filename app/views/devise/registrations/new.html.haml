.container
  %fieldset
    %h3.center Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      =render partial: 'devise/registrations/user_form', locals: {f: f }
      =f.fields_for :person do |ff|
        .form-body
          .form-group.row
            %label.col-md-offset-2.col-md-1 First Name
            .col-md-5
              = ff.text_field :first_name, :class => 'form-control'
        .form-body
          .form-group.row
            %label.col-md-offset-2.col-md-1 Last Name
            .col-md-5
              = ff.text_field :last_name, :class => 'form-control'
        .form-body
          .form-group.row
            %label.col-md-offset-2.col-md-1 Telephone
            .col-md-5
              = ff.text_field :tel, :class => 'form-control'

      .form-group.row
        .center= f.submit "Sign up", class: "btn btn-primary"
        .center= render "devise/shared/links"
