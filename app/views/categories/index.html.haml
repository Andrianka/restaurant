.content
  %h1 Listing category
  %table.table
    %thead
      %tr
        %th Name
        %th Created at
        %th{:colspan => "2"}
    %tbody
      -@categories.each do |category|
        %tr
          %td= category.name
          %td= category.title
          %td= category.description
          %td= image_tag category.image.url(:thumb)
          %td= category.created_at
          %td= link_to 'Show', category_path(category)
          %td= link_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }
