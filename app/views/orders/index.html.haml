.content
  %h1 Orders
  %table.table
    %thead
      %tr
        %th Email
        %th First name
        %th Last name
        %th Roles
        %th{:colspan => "2"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.first_name
          %td= user.last_name
          %td= user.person.roles
          %td= link_to 'Show', user_path(user)
          %td= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }
