.container_12
  .grid_8
    %h3.center= @product.name
    =image_tag @product.image.url(:medium), class: 'img_inner fleft'
    .extra_wrapper
      %p.col1
        %b Weight:
        ="#{@product.weight} #{@product.unit}"
      %p.col1
        %b Price:
        =@product.price
      %p.col1
        %b Description:
        =@product.description
  .grid_4
    = render partial: 'partials/products_new'
