.content
  = form_for(@product) do |f|
    - if @product.errors.any?
      #error_explanation
        %h2
          = pluralize(@product.errors.count, "error")
          prohibited this order from being saved:
        %ul
          - @product.errors.full_messages.each do |message|
            %li= message
    .form-horizontal
      .form-group.row
        = f.label :category, :class => 'col-md-3 control-label'
        .col-md-5
          = f.collection_select :category_id, Category.all, :id, :name, :class => 'form-control'
      .form-group.row
        = f.label :weight, :class => 'col-md-3 control-label'
        .col-md-5
          = f.text_field :weight, :class => 'form-control'
      .form-group.row
        = f.label :quantity, :class => 'col-md-3 control-label'
        .col-md-5
          = f.number_field :quantity, :class => 'form-control'
      .form-group.row
        = f.label :description, :class => 'col-md-3 control-label'
        .col-md-5
          = f.text_area :description, :class => 'form-control'
      .form-group.row
        .col-md-offset-3.col-md-4
          =f.button "Submit", :class=>"btn btn-primary", :type=>'submit'
